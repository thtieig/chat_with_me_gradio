# LLM Providers Configuration
providers:
  ANTHROPIC:
    name: "Anthropic"
    endpoint: "https://api.anthropic.com/v1/messages"
    models:
      - id: "claude-3-opus-20240229"
        name: "Claude 3 Opus"
        max_tokens: 4096
      - id: "claude-3-sonnet-20240229"
        name: "Claude 3 Sonnet"
        max_tokens: 4096
      - id: "claude-3-haiku-20240307"
        name: "Claude 3 Haiku"
        max_tokens: 4096
  
  GOOGLE:
    name: "Google"
    endpoint: "https://generativelanguage.googleapis.com/v1beta/models"
    models:
      - id: "gemini-1.5-pro"
        name: "Gemini 1.5 Pro"
        max_tokens: 8192
      - id: "gemini-1.5-flash"
        name: "Gemini 1.5 Flash"
        max_tokens: 8192
  
  IONOS:
    name: "IONOS"
    endpoint: "https://api.ionos.com/ai/v1"
    models:
      - id: "mistral-7b"
        name: "Mistral 7B"
        max_tokens: 2048
      - id: "llama-3-70b"
        name: "Llama 3 70B"
        max_tokens: 4096
  
  OLLAMA:
    name: "Ollama"
    endpoint: "${OLLAMA_API_BASE}"
    models:
      - id: "llama3"
        name: "Llama 3"
        max_tokens: 4096
      - id: "mistral"
        name: "Mistral"
        max_tokens: 2048
      - id: "gemma"
        name: "Gemma"
        max_tokens: 2048

# Persona Configurations
personas:
  - id: "helpful_assistant"
    name: "Helpful Assistant"
    description: "I am a helpful, harmless, and honest AI assistant. I aim to provide accurate information and assistance for a wide range of tasks."
  
  - id: "coding_expert"
    name: "Coding Expert"
    description: "I am a programming expert with deep knowledge across multiple languages and frameworks. I can help with code problems, architecture decisions, and best practices."
  
  - id: "creative_writer"
    name: "Creative Writer"
    description: "I am a creative writer skilled in storytelling, poetry, and creative content. I can help you craft engaging narratives and explore imaginative ideas."
  
  - id: "academic_researcher"
    name: "Academic Researcher"
    description: "I am an academic researcher with expertise in formal analysis, critical thinking, and literature review. I can help with research questions, papers, and scholarly discussions."
  
  - id: "debate_partner"
    name: "Debate Partner"
    description: "I am a debate partner who can present multiple perspectives on complex issues. I aim to help you explore different viewpoints and strengthen your arguments."

# Generic settings that will be appended to all personas
generic_settings: "Always provide accurate information. If unsure, acknowledge uncertainties. Maintain a friendly and helpful tone. Respond in a concise manner unless asked for detailed explanations."

# UI Configuration
ui:
  title: "AI Chatbot"
  welcome_message: "Welcome to the Multi-Provider AI Chatbot! Select your provider, model, and persona to get started."
  title_css: |
    .title-container {
      text-align: center;
      color: white;
    }

    .title-container span {
      font-size: 3rem;
      color: red;
    }

# File handling configuration
file_handling:
  allowed_extensions: [".txt", ".py", ".js", ".html", ".css", ".json", ".md", ".csv", ".pdf"]
  max_file_size_mb: 10
  max_files_per_upload: 100